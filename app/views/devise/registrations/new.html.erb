<% content_for :sitemap do %><span class="current">加入社区</span><% end %>
<div class="sidebar">
  <div class="box">
    <h2>已经有帐号了？</h2>
    <p style="line-height:20px;">
      <%= render :partial => "devise/shared/links" %>
    </p>
  </div>
  <div class="box">
		<h2>用其他平台的帐号登陆</h2>
		<ul>
		  <li><a href="/auth/google">Google</a></li>
		  <li><a href="/auth/github">Github</a></li>
			<li><a href="/auth/douban">Douban</a></li>
		</ul>
	</div>
</div>
<div class="content">
	<div class="box">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <fieldset>
        <legend>注册新用户</legend>
        <%= render "shared/error_messages", :target => resource %> 
        <div class="clearfix">
          <%= f.label :login %>
          <div class="input">
            <%= f.text_field :login %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :name %>
          <div class="input">
          <%= f.text_field :name %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :email %>
          <div class="input"><%= f.text_field :email %></div>
        </div>
        <div class="clearfix"><%= f.label :password %>
          <div class="input"><%= f.password_field :password %></div>
        </div>
        <div class="clearfix"><%= f.label :password_confirmation %>
          <div class="input"><%= f.password_field :password_confirmation %></div>
        </div>
        <div class="actions">
          <button type="submit" class="btn primary">提交注册信息</button>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

